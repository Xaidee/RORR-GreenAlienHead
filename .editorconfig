# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 255

[*.lua]
indent_style = tab
indent_size = 4

[*.{md,markdown}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
end_of_line = lf
